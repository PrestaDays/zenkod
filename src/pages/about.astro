---
import BaseLayout from '../layouts/BaseLayout.astro';

import Button from '../components/Button';

const pageTitle = "About Page";
---
<BaseLayout pageTitle={pageTitle}>
    <div class="flex min-h-screen relative overflow-hidden">
        <div class="w-full bg-[#FEF6F0] relative z-10 flex items-center">
            <div class="flex h-full w-1/2 items-center justify-center">
                <div class="max-w-md p-12">
                    <h1 class="text-4xl font-bold">nice to meet you</h1>
                    <p class="mt-4">We're John and Jo, co-founders of xelpmoc. Our journey started when...</p>
                </div>
            </div>
            <div class="w-1/2"></div>
        </div>

        <div class="absolute right:0 top-0 z-20 w-1/2 h-full translate-x-full">
            <div class="w-full h-full">
                <svg
                        viewBox="0 0 100 100"
                        preserveAspectRatio="xMidYMid slice"
                        class="w-full h-full"
                >
                    <defs>
                        <clipPath id="wave-mask">
                            <path
                                    d="M35,0
                       C25,20 45,40 35,60
                       C25,80 45,100 35,100
                       L100,100
                       L100,0 Z"
                            />
                        </clipPath>
                    </defs>
                    <g transform="translate(0, 0)">
                        <image
                                href="/images/about.jpg"
                                width="100%"
                                height="100%"
                                clip-path="url(#wave-mask)"
                                preserveAspectRatio="xMidYMid slice"
                        />
                    </g>
                </svg>
            </div>
        </div>
    </div>
    <div class="bg-[#FEF6F0] py-12">
        <div class="max-w-3xl mx-auto px-4">
            <h2 class="text-3xl font-bold">Our story</h2>
            <p class="mt-4">We're John and Jo, co-founders of xelpmoc. Our journey started when...</p>
        </div>
    </div>
</BaseLayout>